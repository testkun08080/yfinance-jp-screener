# Docker環境変数設定サンプル
# .envにコピーして使用してください

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 株式データ収集設定
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 処理する株式ファイル
# オプション: stocks_1.json, stocks_2.json, stocks_3.json, stocks_4.json, stocks_all.json
# サンプルデータ（3銘柄）
STOCK_FILE=stocks_sample.json
# 全銘柄処理 (約3700銘柄)
# STOCK_FILE=stocks_all.json

# データ分割時のチャンクサイズ
CHUNK_SIZE=1000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# フロントエンド設定
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Node.js環境
# オプション: development, production
NODE_ENV=production

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Python設定
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# バッファリング無効化（ログ即時出力）
PYTHONUNBUFFERED=1

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Docker設定
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Composeプロジェクト名
COMPOSE_PROJECT_NAME=yf-jp-stock-screener
PORT=8000
# タイムゾーン
TZ=Asia/Tokyo
